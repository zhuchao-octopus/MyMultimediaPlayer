<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="28dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/video_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="155dp"
                android:text="Device name"
                android:textColor="#ffffff"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="34sp"
                tools:text="kaier" />

            <ImageView
                android:id="@+id/ivEditDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingHorizontal="195dp"
                android:src="@mipmap/bt_edit" />
        </LinearLayout>


        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:src="@mipmap/video_divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/video_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="155dp"
                android:text="Pin password"
                android:textColor="#ffffff"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvPinCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="34sp"
                tools:text="123456" />

            <ImageView
                android:id="@+id/ivEditPinCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingHorizontal="195dp"
                android:src="@mipmap/bt_edit" />
        </LinearLayout>


        <ImageView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:src="@mipmap/video_divider" />

    </LinearLayout>
</LinearLayout>