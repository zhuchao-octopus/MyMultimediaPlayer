<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/viewDial"
        android:layout_width="616dp"
        android:layout_height="525dp"
        android:layout_marginLeft="42dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="58sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="58sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="58sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="58sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bt_dial_btn"
                android:gravity="center"
                android:text="ï¼ƒ"
                android:textColor="@color/white"
                android:textSize="58sp" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/viewVoice"
        android:layout_width="392dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:src="@drawable/selector_bt_voice"
        app:layout_constraintBottom_toBottomOf="@+id/viewDial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDial" />

    <ImageView
        android:id="@+id/viewHung"
        android:layout_width="392dp"
        android:layout_height="100dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:src="@drawable/selector_bt_hung"
        app:layout_constraintBottom_toTopOf="@+id/viewVoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDial" />

    <ImageView
        android:id="@+id/viewCall"
        android:layout_width="392dp"
        android:layout_height="100dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:src="@drawable/selector_bt_call"
        app:layout_constraintBottom_toTopOf="@+id/viewHung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDial" />


    <ImageView
        android:id="@+id/viewDelete"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_bt_delete"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/viewVoice"
        app:layout_constraintTop_toTopOf="@+id/viewDial" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/viewVoice"
        app:layout_constraintStart_toStartOf="@+id/viewVoice"
        app:layout_constraintTop_toTopOf="@+id/viewDelete"
        tools:textColor="00000" />

</androidx.constraintlayout.widget.ConstraintLayout>