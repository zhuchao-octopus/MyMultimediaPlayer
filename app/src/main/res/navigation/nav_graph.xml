<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/VideoFragment">

    <fragment
        android:id="@+id/VideoFragment"
        android:name="com.octopus.android.multimedia.fragments.VideoFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_video">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/AudioFragment" />
    </fragment>

    <fragment
        android:id="@+id/AudioFragment"
        android:name="com.octopus.android.multimedia.fragments.AudioFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_audio">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/VideoFragment" />
    </fragment>

</navigation>